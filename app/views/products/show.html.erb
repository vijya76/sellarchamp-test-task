<%= link_to t('product.all'), products_path %>
<h3><%= @product.title %></h3>

<div class="well well-compact">
  <p>
    <strong><%=t('variant.headers.sku')%>:</strong>
    <%= @product.sku %>
  </p>

  <p>
    <strong><%=t('variant.headers.description')%>:</strong>
    <%= @product.description %>
  </p>

  <p>
    <strong><%=t('variant.headers.type')%>:</strong>
    <%= @product.product_type.name %>
  </p>

  <% if @product.variants.present? %>
    <hr>

    <h3><%=t('variant.title')%></h3>

    <table class="table table-hover">
      <tr>
        <th><%=t('variant.headers.sku')%></th>
        <th><%= t('variant.headers.price')%></th>
        <th><%= t('variant.headers.quantity')%></th>
        <th><%= t('variant.headers.options')%></th>
      </tr>

      <% @product.variants.each do |variant| %>
        <tr>
        <td><%= variant.sku %></td>
        <td><%= variant.price %></td>
        <td><%= variant.quantity %></td>
        <% if variant.variant_options.present? %>
          <td>
            <% variant.variant_options.each do |option| %>
              <strong><%=t('variant.headers.option_type')%>:</strong> <%= option.option_type %>
              <strong><%=t('variant.headers.option_value')%>:</strong> <%= option.option_value %>
              <br>
            <% end %>
          </td>
        <% else %>
          <td>N/A</td>
        <% end %>
        </tr>
      <% end %>
    </table>
  <%end%>
</div>
